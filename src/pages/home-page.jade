    input(type='text', value='What are you looking for?').plain.search-bar
    i.fa.fa-search.inner-search-btn

mixin post(title, videoType, source, description, active)
  .post(class='#{active ? "active" : ""}')
    a(href='./issue.html?issue=' + title.toLowerCase().replace(/ /g, '_'))
      h2.title=title
    .video(class='#{active ? "playing" : ""}')
      .click-capture
      - if (videoType === 'iframe') {
        iframe(
          height="300",
          src!=source + (active ? '?autoplay=1' : ''),
          frameborder="0"
          )
      - } else {
        video(src!=source)
      - }
    p.description
      != description

