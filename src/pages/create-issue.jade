extends ../layout

include _mixins

block head
  title Post an Issue

block vars
  - bodyClass = 'create-issue'

block nav
  +back-btn()
  p.column.eleven.last Post an Issue

block body
  header
    form.issue-form
      .top
        label.column.two Title
        input.plain.column.ten.last(type='text')

        textarea.plain
          | Description...

      #video-upload
        p.placeholder.column.twelve your video will go here :)
        video.stored.column.twelve.last(autoplay)
        video.streaming.column.twelve.last(autoplay)
        button.plain.video-upload-btn
          .inner-btn
      
      // NOTE(jordan) temporarily hidden because not yet styled/ready
      button.plain.new-btn(disabled) &check;
